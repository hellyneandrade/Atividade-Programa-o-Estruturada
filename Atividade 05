#include <stdio.h>

void somaParesImpares(int n, int* par, int* impar) {
    *par = 0;   // inicializa a soma dos pares
    *impar = 0; // inicializa a soma dos Ã­mpares

    for (int i = 0; i <= n; i++) {
        if (i % 2 == 0) {
            *par += i;
        } else {
            *impar += i;
        }
    }
}

int main() {
    int n = 10;
    int somaP = 0, somaI = 0;

    somaParesImpares(n, &somaP, &somaI);

    printf("Soma dos pares: %d\n", somaP);
    printf("Soma dos impares: %d\n", somaI);

    return 0;
}
